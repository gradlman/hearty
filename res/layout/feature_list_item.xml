<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgItem"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/stat_notify_sync_error" android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/lblValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120"
            android:textColor="@color/color_gr1_green"
            android:textSize="22sp"
            android:textStyle="bold"
            android:typeface="sans" android:layout_marginLeft="1dp" android:maxLines="1"/>

        <LinearLayout
            android:id="@+id/linearLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:layout_marginLeft="4dp" android:gravity="right" android:layout_gravity="bottom">

            <TextView
                android:id="@+id/lblValueSup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="210"
                android:textSize="10sp"
                android:typeface="monospace" android:textColor="@color/color_blue4" android:maxLines="1"/>

            <TextView
                android:id="@+id/lblValueSub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="70"
                android:textSize="10sp"
                android:typeface="monospace" android:textColor="@color/color_blue9" android:maxLines="1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/lblText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Heart Ratep"
        android:textSize="10sp"
        android:typeface="serif" android:textStyle="italic" android:layout_gravity="right" android:layout_marginTop="-2sp"/>

</LinearLayout>